<!--
 To build as3oauth.swc, use

   compc -load-config=build-swc.xml
   acompc -load-config=build-swc.xml

 That is all.
-->
<flex-config>
  <compiler>
    <external-library-path>
      <path-element>${flexlib}/libs/player/9/playerglobal.swc</path-element>
      <path-element>lib/corelib-20070830.swc</path-element>
      <path-element>lib/as3crypto-1_3_patched.swc</path-element>
      <path-element>lib/as3httpclientlib-1_0_5.swc</path-element>
    </external-library-path>
    
    <source-path>
      <path-element>src</path-element>
    </source-path>
  </compiler>
  <include-classes>
      <class>org.coderepos.oauth.OAuthConsumer</class>
      <class>org.coderepos.oauth.OAuthParamMethod</class>
      <class>org.coderepos.oauth.OAuthRequest</class>
      <class>org.coderepos.oauth.OAuthRequestOption</class>
      <class>org.coderepos.oauth.OAuthSignatureMethod</class>
      <class>org.coderepos.oauth.OAuthToken</class>
      <class>org.coderepos.oauth.OAuthUtil</class>
      <class>org.coderepos.oauth.signaturemethods.HMAC_SHA1</class>
      <class>org.coderepos.oauth.signaturemethods.PLAINTEXT</class>
      <class>org.coderepos.oauth.events.OAuthEvent</class>
      <class>org.coderepos.oauth.events.OAuthEventResult</class>
  </include-classes>
  <metadata>
    <creator>Lyo Kato</creator>
    <description>http://github.com/lyokato/as3oauth.git</description>
    <language>EN</language>
    <title>AS3 OAuth Consumer Library</title>
  </metadata>
  <output>bin/as3oauth-1_0_0.swc</output>
</flex-config>
